<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/Black"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle" android:top="2dp" android:left="2dp" android:bottom="2dp" android:right="2dp">
            <solid android:color="#1a1a1a"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:top="3dp" android:left="3dp" android:bottom="3dp" android:right="3dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#2f2f2f"
                android:centerY="1.0"
                android:endColor="#212121"
                android:startColor="#2b2b2b" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>