<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/orange4_new_theme"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle" android:top="2dp" android:left="2dp" android:bottom="2dp" android:right="2dp">
            <solid android:color="@color/orange4_new_theme"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:top="3dp" android:left="3dp" android:bottom="3dp" android:right="3dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/orange4_new_theme"
                android:centerY="1.0"
                android:endColor="@color/orange4_new_theme"
                android:startColor="@color/orange4_new_theme" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>