<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke android:width="3dp" android:color="@color/grey" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/orange1" android:startColor="@color/orange2" />
            <stroke android:width="3dp" android:color="@color/grey" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/orange2" android:startColor="@color/orange3" />
            <stroke android:width="3dp" android:color="@color/grey" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
