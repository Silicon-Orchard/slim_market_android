<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WhiteSmoke">

    <include layout="@layout/layout_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btn_join_channel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/ic_channel_join"
            android:drawablePadding="40dp"
            android:textSize="24sp"
            android:gravity="left|center_vertical"
            android:text="@string/join_channel"/>

        <Button
            android:id="@+id/btn_create_channel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/ic_channel_create"
            android:drawablePadding="40dp"
            android:textSize="24sp"
            android:gravity="left|center_vertical"
            android:text="@string/create_channel"/>
    </LinearLayout>

</LinearLayout>